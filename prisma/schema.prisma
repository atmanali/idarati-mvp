generator client {
  provider = "prisma-client-js"
  previewFeatures = ["omitApi", "driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id String @id @db.Uuid
  last_name String
  first_name String
  email String @unique
  username String @unique
  password String
  is_first_connection Boolean
  is_connected Boolean @default(false)
  session_token String?
  logs logs[]
  results results[]
  roles users_roles[]
  appointments users_appointments[]
  courses users_courses[]
}

model roles {
  id String @id @db.Uuid
  name String @unique
  users users_roles[]
}

model appointments {
  id Int @id @default(autoincrement())
  name String
  type String
  start_date DateTime
  end_date DateTime
  users users_appointments[]
}

model courses {
  id Int @id @default(autoincrement())
  name String
  subject String
  teacher_id String @db.Uuid
  students users_courses[]
}

model results {
  id Int @id @default(autoincrement())
  mark String
  comment String
  student_id String @db.Uuid
  student users @relation(fields: [student_id], references: [id], onDelete: Cascade)
}

model logs {
  id Int @id @default(autoincrement())
  crud_action String
  affected_table_name String
  affected_fields_names String
  affected_iteration_id String
  date DateTime @default(now())
  author_id String @db.Uuid
  author users @relation(fields: [author_id], references: [id], onDelete: Cascade)
}

model users_roles {
  user_id String @db.Uuid
  user users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  role_id String @db.Uuid
  role roles @relation(fields: [role_id], references: [id])

  @@id([user_id, role_id])
}

model users_appointments {
  user_id String @db.Uuid
  user users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  appointment_id Int
  appointment appointments @relation(fields: [appointment_id], references: [id])

  accepted Boolean
  absent Boolean

  @@id([user_id, appointment_id])
}

model users_courses {
  user_id String @db.Uuid
  user users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  course_id Int
  course courses @relation(fields: [course_id], references: [id])

  @@id([user_id, course_id])
}